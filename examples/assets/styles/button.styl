.demo-block {
  .demo-button {
    margin-bottom: 10px;
    &:last-child {
      margin-bottom: 0;
    }
    .znv-button-group + .znv-button-group {
      margin-left: 8px;
    }
  }
  .znv-button + .znv-button {
    margin-left: 8px;
  }
}

.icon-loading {
  animation: rotating 2s linear infinite;
}

@keyframes rotating {
  0% {
    transform: rotateZ(0deg);
  }
  100% {
    transform: rotateZ(360deg);
  }
}
