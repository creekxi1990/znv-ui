//item
.znv-form-item {
  display: flex;
  margin-bottom: 24px;
  vertical-align: top;
  &-label {
    display: inline-flex;
    align-items: center;
    justify-content: flex-end;
    font-size: $base-font-size;
    color: $color-text-primary;
    line-height: $base-line-height;
    height: $default-height;
    box-sizing: border-box;
    &::after {
      content: ':';
      position: relative;
      top: -0.5px;
      margin: 0 8px 0 2px;
    }
  }
  &-content {
    position: relative;
    line-height: $base-line-height;
    font-size: $base-font-size;
    .znv-checkbox-group, .znv-radio-group {
      line-height: $default-height - 2;
    }
  }

}

.znv-form-item-required {
  .znv-form-item-label:before {
    content: "*";
    display: inline-block;
    margin-right: 4px;
    line-height: $base-line-height;
    font-family: SimSun;
    font-size: $base-font-size;
    color: $color-danger;
  }
}
.znv-form-item-error > .znv-form-item-content .znv-input {
  border: 1px solid $color-danger;
  &:focus {
    outline: 0;
    box-shadow: 0 0 0 2px $color-input-error-shadow;
  }
}
.znv-form-item-error > .znv-form-item-content .znv-date-picker-focused input {
  border: 1px solid $color-danger;
  box-shadow: none;
}

.znv-form-item-error-tip {
  position: absolute;
  top: 100%;
  left: 0;
  line-height: $base-line-height;
  color: $color-danger;
}

.znv-form-inline .znv-form-item {
  display: inline-block;
  margin-right: 10px;
  vertical-align: top;
}
.znv-form-label-left .znv-form-item-label {
  justify-content: flex-start;
}
.znv-form-label-top {
  .znv-form-item {
    display: block;
    .znv-form-item-label {
      width: 100%;
      justify-content: flex-start;
    }
    .znv-form-item-label-empty {
      display: none;
    }
    .znv-form-item-content {
      flex: none;
      width: 100%;
    }
  }
}

.znv-form-item-error {
  .znv-date-picker .znv-input-suffix i {
    color: $color-danger;
  }
}
