.znv-breadcrumb {
  font-size: $base-font-size;
  line-height: $base-line-height;
  &:after, &:before {
    display: table;
    content: "";
  }
}

.znv-breadcrumb__item {
  &:last-child .znv-separator {
    display: none;
  }
}
.znv-separator {
  margin: 0 6px;
  color: $color-text-secondary;
  &.icon {
    font-weight: normal;
  }
}
.znv-breadcrumb__inner {
  color: $color-text-default;
  &.is-link, a {
    text-decoration: none;
    transition: color .2s cubic-bezier(.645, .045, .355, 1);
    color: $color-text-secondary;
    &:hover {
      color: $color-primary;
      cursor: pointer;
    }
  }
}
