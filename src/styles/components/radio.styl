.znv-radio-wrapper {
  font-size: $base-font-size;
  vertical-align: middle;
  display: inline-block;
  position: relative;
  white-space: nowrap;
  line-height: $base-line-height;
  margin-right: 8px;
  cursor: pointer;
  &-disabled {
    cursor: not-allowed;
  }
}

.znv-radio {
  position: relative;
  display: inline-block;
  white-space: nowrap;
  vertical-align: middle;
  width: 16px;
  height: 16px;
  cursor: pointer;
  &-inner {
    position: relative;
    top: 0;
    left: 0;
    display: inline-block;
    width: 16px;
    height: 16px;
    background-color: #fff;
    border: $border-base;
    border-radius: 50%;
    transition: all .2s ease-in-out;
    &:after {
      position: absolute;
      width: 8px;
      height: 8px;
      left: 3px;
      top: 3px;
      border-radius: 6px;
      display: table;
      border-top: 0;
      border-left: 0;
      content: " ";
      background-color: $color-primary;
      opacity: 0;
      transition: all .2s ease-in-out;
      -webkit-transform: scale(0);
      transform: scale(0);
    }
  }
  &-input {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    opacity: 0;
    cursor: pointer;
  }

  &-checked:after {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px solid $color-primary;
    border-radius: 50%;
    animation: radioEffect .36s ease-in-out;
    animation-fill-mode: both;
    content: '';
  }
  &-checked &-inner {
    border-color: $color-primary
  }

  &-checked &-inner:after {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
    transition: all .2s ease-in-out;
  }
  &-focus {
    box-shadow: 0 0 0 3px $color-effect-shadow ;
  }
  &:hover {
    .znv-radio-inner {
      border-color: $color-primary-light1;
    }
  }
}
.znv-radio + span, .znv-radio-wrapper + span {
  padding: 0 8px;
  vertical-align: middle;
}
.znv-radio-disabled, .znv-radio-disabled .znv-radio-input {
  cursor: not-allowed;
}
.znv-radio-disabled .znv-radio-inner {
  border-color: #dcdee2;
  background-color: #f3f3f3;
}

.znv-radio-disabled .znv-radio-inner:after {
  background-color: #ccc;
}

.znv-radio-group .znv-radio-checked .znv-radio-focus {
  box-shadow: 0 0 0 3px $color-effect-shadow ;
  transition: all .2s ease-in-out;
}

@keyframes radioEffect {
  0% {
    transform: scale(1);
    opacity: 0.5;
  }
  100% {
    transform: scale(1.6);
    opacity: 0;
  }
}
